ARG os_release="latest"
FROM ubuntu:${os_release} AS builder
ARG fmt_release="7.1.3"
ARG folly_release="2021.03.29.00"

# Required Packages for all builds
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get -y update && apt-get install --no-install-recommends -y \
    build-essential \
    ca-certificates \
    cmake \
    git
RUN mkdir /root/build
WORKDIR /root/build

# fmt build and install
RUN git clone https://github.com/fmtlib/fmt.git
WORKDIR /root/build/fmt
RUN git checkout tags/${fmt_release} -b ${fmt_release}
RUN cmake .
RUN make
RUN make install

WORKDIR /root/build

# folly build and install
RUN apt-get install --no-install-recommends -y \
    googletest \
    libboost-dev \
    libboost-context-dev \
    libboost-filesystem-dev \
    libboost-program-options-dev \
    libboost-regex-dev \
    libboost-system-dev \
    libdouble-conversion-dev \
    libevent-dev \
    libgflags-dev \
    libgoogle-glog-dev \
    libssl-dev
RUN git clone https://github.com/facebook/folly.git
WORKDIR /root/build/folly
RUN git checkout tags/v${folly_release} -b v${folly_release}

# Don't compile with AVX512 instructions since many of the AWS
# instances won't have access to that instruction set.
RUN cmake DBUILD_SHARED_LIBS=OFF -DFOLLY_USE_JEMALLOC=0 -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_FLAGS="-march=haswell" .
RUN make && make install

FROM ubuntu:${os_release}
COPY --from=builder /usr/local/include/. /usr/local/include/.
COPY --from=builder /usr/local/lib/. /usr/local/lib/.
ENTRYPOINT [ "sh" ]
